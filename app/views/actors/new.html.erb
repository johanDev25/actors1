    <%= form_for @actor do |f| %>
    <div class="input">
    	<%= f.text_field :name, placeholder: "Nombre del actor" %>
    </div>

    <div class="input">
    	<%= f.text_field :bio, placeholder: "Biografia" %>
    </div>

    <div class="input">
    	<%= f.date_field :birth_date, placeholder: "Fecha de nacimiento" %>
    </div>

    <div class="input">
    	<%= f.text_field :birth_place, placeholder: "Lugar de nacimiento" %>
    </div>

    <div class="input">
    	<%= f.text_field :image_url, placeholder: "Foto en una url" %>
    </div>

    <div class="input">
    	<h4>Marcar si el actor esta con vida</h4>
    	<%= f.check_box :alive, {}, true, false%>
    </div>

    <div class="input">
    	<%= f.date_field :death_date, placeholder: "Fecha de fallecimiento" %>
    </div>

    <div class="input">
    	<%= f.text_field :death_place, placeholder: "Lugar de fallecimiento" %>
    </div>\

    <div class="boton">
    	<%= f.submit  %>
    </div>
    <% end %>